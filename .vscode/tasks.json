{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build C (gcc)",
      "type": "shell",
      "command": "C:\\msys64\\ucrt64\\bin\\gcc.exe",
      "args": [
        "-std=c17",               // estándar moderno
        "-g",                     // símbolos de depuración
        "-O0",                    // sin optimizar (mejor para depurar)
        "-Wall", "-Wextra", "-Wpedantic", // buenos avisos
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"],
      "detail": "Build task for C (gcc) with useful warnings"
    }
  ]
}
